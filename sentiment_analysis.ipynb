"""
This script performs sentiment analysis on Amazon product reviews.
It cleans and preprocesses review text, then uses spaCy and SpacyTextBlob
to calculate polarity scores and classify reviews as Positive, Negative,
or Neutral to evaluate overall customer sentiment.
"""

# Import relevant libraries
import pandas as pd
import spacy
from spacytextblob.spacytextblob import SpacyTextBlob

# Load spaCy model 
nlp = spacy.load("en_core_web_md")

# Add sentiment analysis component
nlp.add_pipe("spacytextblob")


# Load dataset
dataframe = pd.read_csv("Datafiniti_Amazon_Consumer_Reviews_of_Amazon_Products_May19.csv")

# Drop empty reviews
clean_data = dataframe.dropna(subset=["reviews.text"])

# Text preprocessing function
def preprocess_text(text):
    """Lowercase text, remove stopwords and non-alphabetic tokens"""
    doc = nlp(text.lower().strip())
    tokens = [t.text for t in doc if not t.is_stop and t.is_alpha]
    return " ".join(tokens)

# Apply cleaning
clean_data["clean_reviews"] = clean_data["reviews.text"].apply(preprocess_text)


# Sentiment analysis function
def analyze_sentiment(review):
    """Return polarity score (-1 to 1) and sentiment label"""
    doc = nlp(review)
    polarity = doc._.blob.polarity
    
    if polarity > 0:
        sentiment = "Positive"
    elif polarity < 0:
        sentiment = "Negative"
    else:
        sentiment = "Neutral"
        
    return polarity, sentiment


# Test on sample reviews
print("\n--- Sample Sentiment Analysis ---\n")
sample_reviews = clean_data["clean_reviews"].head(5).tolist()

for review in sample_reviews:
    score, sent = analyze_sentiment(review)
    print(f"Review: {review[:80]}... | Polarity: {score:.2f} | Sentiment: {sent}")


# Run sentiment analysis on all reviews
clean_data["polarity"], clean_data["sentiment"] = zip(
    *clean_data["clean_reviews"].map(analyze_sentiment)
)


# Display overall sentiment results
sentiment_counts = clean_data["sentiment"].value_counts().to_dict()

print("\n--- Sentiment Results ---\n")
print(f"Analyzed {len(clean_data)} reviews.")
print(f"Sentiment counts: {sentiment_counts}\n")

print("Most reviews are 'Positive', showing general customer satisfaction.")
